<Page x:Class="Assignment_5.LeaderBoardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Assignment_5"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LeaderBoardPage">

    <Grid Background="#FFB08BFF">
        <StackPanel x:Name="ScoresStack" Margin="10,73,10,0">
            <StackPanel x:Name="ScoreStack" Height="35" Orientation="Horizontal">
                <Label x:Name="NameLabel" Content="Name" FontWeight="Bold" FontSize="20" Width="314" Foreground="White"/>
                <Label x:Name="ScoreLabel" Content="Score" FontWeight="Bold" FontSize="20" Width="172" Foreground="White"/>
                <Label x:Name="TimeLabel" Content="Time" FontWeight="Bold" FontSize="20" Foreground="White"/>
            </StackPanel>
        </StackPanel>
        <Label x:Name="LeaderBoardTitle" Content="MathHead Addition Leaderboard" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="36" FontWeight="Bold" FontFamily="Comic Sans MS" Foreground="White"/>

    </Grid>
</Page>
